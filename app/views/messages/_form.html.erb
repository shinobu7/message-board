<div class="col-sm-6">
  <%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
    <% if @message.errors.present? %>
      <div class="alert alert-danger">
        <%= alert %>
        <ul>
          <% @message.errors.full_messages.each do |full_message| %>
            <li><%= full_message %></li>
          <% end %>
        </ul>
      </div>  
    <% end %>

    <h3>メッセージを書き込む</h3><br>

    <div class="form-group">
      <label for="message_name" class="control-label col-md-2">名前:</label>
      <div class="col-md-10">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <label for="message_age" class="control-label col-md-2">年齢:</label>
      <div class="col-md-10">
        <%= f.text_field :age, class: "form-control" %>
      </div>
    </div>

    <div class="form-group">    
      <label for="message_body" class="control-label col-md-2">内容:</label>
      <div class="col-md-10">
        <%= f.text_area :body, class: "form-control" %>
      </div>
    </div>
    
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <%= f.submit "書き込む", :class => "btn btn-success btn-lg" %>
      </div>
    </div>
  <% end %>
</div>