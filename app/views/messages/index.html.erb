 <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css">
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag "cha", :media => "all" %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  
<div class="row">
<div class="col-sm-6 .hidden-xs>
<div class="panel-heading">
<h3>メッセージ一覧</h3>
<div class="panel-body">
    <% @messages.each do |message| %>
    <p class="who"><%= message.name %></p>
    <p class="who2"><%= message.body %></p>
    <br>
    <% end %>
</div></div>
  

<%= form_for(@message) do |f| %>
<% if @message.errors.present? %><div class="alert alert-danger"><%= alert %><ul><% @message.errors.full_messages.each do |full_message| %><li><%= full_message %></li><% end %></div><% end %>
<div class="col-sm-6">
<h3>メッセージを書き込む</h3>
<form class="form-inline">
  <div class="form-group">
    <input type="text" class="form-control" name="message[name]" id="message_name" placeholder="お名前"><br>
    <textarea class="form-control" name="message[body]" id="message_body" rows="3" placeholder="書き込み内容"></textarea><br>
    <input type="submit" name="commit" value="書き込みするよ" class="btn btn-success btn-lg">
     
  </div>
<% end %>

</form>
</div>

</div>

</div></div>
</div>
</div>